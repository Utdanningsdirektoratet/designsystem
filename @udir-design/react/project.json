{
  "name": "@udir-design/react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "@udir-design/react/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project @udir-design/react --web",
  "targets": {
    "dev": {
      "continuous": true,
      "dependsOn": [
        "build",
        { "projects": "!css", "target": "^watch" },
        "lint:cycles",
        "serve:typedoc"
      ]
    },
    "build:storybook": {
      "inputs": ["default", "^default", "{workspaceRoot}/README.md"],
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{projectRoot}/storybook-static"]
    },
    "build:docs": {
      "dependsOn": ["build:storybook"],
      "cache": true,
      "outputs": ["{projectRoot}/storybook-static/typedoc"]
    },
    "serve:docs": {
      "continuous": true,
      "dependsOn": ["build:storybook", "build:docs"]
    },
    "watch:typedoc": {
      "continuous": true
    },
    "serve:typedoc": {
      "continuous": true,
      "dependsOn": ["watch:typedoc"]
    },
    "test:storybook": {
      "cache": true,
      "dependsOn": ["build"],
      "outputs": [
        "{projectRoot}/test-reports/storybook.json",
        "{projectRoot}/test-reports/storybook"
      ]
    },
    "view-test-report:storybook": {
      "continuous": true,
      "dependsOn": ["test:storybook"]
    }
  }
}
